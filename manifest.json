{
  "manifest_version": 3,
  "name": "Compi Buddy",
  "version": "1.0",
  "description": "An minimal competitive calendar app",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "html/index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ]
}
